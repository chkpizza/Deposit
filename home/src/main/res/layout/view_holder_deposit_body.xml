<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="model"
            type="com.wantique.home.ui.detail.model.DepositBody" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="#ffffff">

        <TextView
            android:id="@+id/deposit_tv_sign_up_method_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/deposit_sign_up_method"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/main_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/deposit_tv_sign_up_method"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/sub_text"
            tools:text="영업점 및 비대면"
            android:text="@{model.signUpMethod}"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="8dp"/>

        <View
            android:id="@+id/deposit_view_sign_up_method"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_sign_up_method"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/deposit_tv_target_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_view_sign_up_method"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:text="@string/deposit_target"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:id="@+id/deposit_tv_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_target_title"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="8dp"
            android:textColor="@color/sub_text"
            android:text="@{model.target}"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"
            tools:text="개인 및 개인 사업자"/>

        <View
            android:id="@+id/deposit_view_target"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_target"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:background="@color/divider"/>


        <TextView
            android:id="@+id/deposit_tv_contract_period_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_view_target"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:text="@string/deposit_contract_period"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:id="@+id/deposit_tv_contract_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_contract_period_title"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="8dp"
            android:textColor="@color/sub_text"
            android:textSize="13sp"
            android:text="@{model.contractPeriod}"
            android:fontFamily="@font/pretendard_medium"
            tools:text="1년(12개월)"/>

        <View
            android:id="@+id/deposit_view_contract_period"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_contract_period"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/deposit_tv_sign_up_amount_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_view_contract_period"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:text="@string/deposit_sign_up_amount"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:id="@+id/deposit_tv_sign_up_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_sign_up_amount_title"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="8dp"
            android:textColor="@color/sub_text"
            android:textSize="13sp"
            android:text="@{model.signUpAmount}"
            android:fontFamily="@font/pretendard_medium"
            tools:text="1천만원 이상"/>

        <View
            android:id="@+id/deposit_view_sign_up_amount"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="@{model.protect ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_sign_up_amount"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/deposit_tv_protect_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_view_sign_up_amount"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="16dp"
            android:text="@string/deposit_protect"
            android:visibility="@{model.protect ? View.VISIBLE : View.GONE}"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:id="@+id/deposit_tv_protect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_protect_title"
            app:layout_constraintStart_toStartOf="@id/deposit_tv_sign_up_method_title"
            app:layout_constraintEnd_toEndOf="@id/deposit_tv_sign_up_method_title"
            android:layout_marginTop="8dp"
            android:textColor="@color/sub_text"
            android:textSize="13sp"
            android:visibility="@{model.protect ? View.VISIBLE : View.GONE}"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/deposit_protect_description"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deposit_container_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:bank_signature_color="@{model.bankCode}"
            app:layout_constraintTop_toBottomOf="@id/deposit_tv_protect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:onClick="@{()->model.onClickListener.invoke(model)}"
            android:background="#FFB71B">

            <TextView
                android:id="@+id/deposit_tv_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/deposit_detail"/>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>