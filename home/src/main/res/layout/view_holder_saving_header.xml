<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.wantique.home.ui.detail.model.SavingHeader" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="#ffffff">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/deposit_container_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:bank_signature_color="@{model.bankCode}">

            <TextView
                android:id="@+id/saving_tv_tax_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_chip"
                android:backgroundTint="#FF6A21"
                android:fontFamily="@font/pretendard_medium"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/tax_free_title"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="@{model.taxFree ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp" />

            <TextView
                android:id="@+id/saving_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="@{model.title}"
                android:textColor="@color/main_text"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/saving_tv_tax_free" />

            <TextView
                android:id="@+id/saving_tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@{model.description}"
                android:textColor="@color/sub_text"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/saving_tv_title" />

            <TextView
                android:id="@+id/saving_tv_max_interest_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/highest_interest_rate_title"
                android:textColor="@color/main_text"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/saving_tv_description" />

            <TextView
                android:id="@+id/saving_tv_min_interest_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@string/base_interest_rate_title"
                android:textColor="@color/main_text"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/saving_tv_max_interest_rate"
                app:layout_constraintTop_toTopOf="@id/saving_tv_max_interest_rate_title" />

            <TextView
                android:id="@+id/saving_tv_max_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="@{@string/formatted_single_interest_rate(model.maxRate)}"
                android:textColor="@color/main_text"
                app:layout_constraintStart_toStartOf="@id/saving_tv_max_interest_rate_title"
                app:layout_constraintTop_toBottomOf="@id/saving_tv_max_interest_rate_title"
                tools:text="연 3.90%" />

            <TextView
                android:id="@+id/saving_tv_min_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="@{@string/formatted_single_interest_rate(model.minRate)}"
                android:textColor="@color/main_text"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/saving_tv_min_interest_rate_title"
                app:layout_constraintTop_toTopOf="@id/saving_tv_max_interest_rate"
                tools:text="연 3.10%" />

            <TextView
                android:id="@+id/saving_tv_rate_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="@{@string/formatted_interest_rate_description(model.rateDescription)}"
                android:textColor="@color/sub_text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/saving_tv_max_interest_rate"
                tools:text="(세전, 우대금리포함)" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/deposit_container_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deposit_container_header"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/saving_iv_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:load_bank_icon="@{model.bankCode}"
                tools:src="@drawable/ic_kb" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>