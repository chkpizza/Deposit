<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.wantique.home.ui.home.model.SavingVertical" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/savings_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#E9E9E9"
            android:fontFamily="@font/pretendard_bold"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/main_text"
            android:textSize="15sp"
            android:text="@{model.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savings_rv_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:simple_submittable_state="@{model.simpleSubmittableState}"
            app:layout_constraintTop_toBottomOf="@id/savings_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/savings_btn_more_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="@{()->model.onClickListener.invoke()}"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/savings_more_view"
            android:textColor="@color/sub_text"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_add_round"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/savings_rv_vertical"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>